{
    "action": {
        "default_icon": {
            "512": "lib/img/icons/logo_512.png"
        },
        "default_title": "Twillus - Quick Image Preview for Twitter"
    },
    "background": {
        "service_worker": "background.js"
    },
    "default_locale": "en",
    "description": "__MSG_extDesc__",
    "icons": {
        "512": "lib/img/icons/logo_512.png"
    },
    "manifest_version": 3,
    "name": "__MSG_extName__",
    "permissions": [
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://twitter.com/*"
    ],
    "version": "1.0.0",
    "web_accessible_resources": [
        {
            "matches": [
                "https://twitter.com/*"
            ],
            "resources": [
                "src/tweets.css",
                "lib/js/drift-basic.min.css"
            ]
        }
    ]
}
